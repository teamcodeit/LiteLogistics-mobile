<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="Widget.Styled.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="actionMenuTextColor">@color/textColorPrimary</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonStyle.Red" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/red</item>
        <item name="colorButtonNormal">@color/red</item>
        <item name="backgroundTint">
            @color/red
        </item>
    </style>

    <style name="BoldText" parent="android:TextAppearance">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
    </style>

    <style name="ButtonStyle.BorderLess" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
